@charset "UTF-8";
page {
  width: 100%;
  height: 100%;
}

.home-view {
  background-color: #f0f0f0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.home-view .header {
  background-color: #ffffff;
  padding: 0 3%;
  flex: 0 0 100rpx;
  /* 不放大不缩小固定100rpx */
  border-bottom: 1px solid #d6d5d5;
}

.home-view .header .home-souse {
  display: flex;
}

.home-view .header .home-souse .add {
  height: 24px;
  width: 24px;
  margin: 4px 6px;
}

.home-view .header .home-souse .live {
  margin-right: 12px;
  margin-top: 2px;
}

.home-view .header .home-souse .souse-input {
  height: 32px;
  background-color: #ebebeb;
  padding: 0 8px;
  border-radius: 8px;
  width: calc( 94% - 64px);
  font-size: 28rpx;
}

.home-view .header .title-list {
  display: flex;
  margin-top: 12px;
  font-size: 26rpx;
}

.home-view .header .title-list .title-item {
  width: 33%;
  text-align: center;
}

.home-view .header .title-list .show-item .tip {
  height: 2px;
  width: 32px;
  background-color: black;
  margin-top: 6px;
  margin-left: 36%;
}

.home-view .main {
  flex: 1;
  position: relative;
}
