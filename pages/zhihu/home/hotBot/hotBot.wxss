@charset "UTF-8";
.hot-bot {
  /* 公告栏 */
}

.hot-bot .title {
  height: 96rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  background-color: #ffffff;
  position: relative;
}

.hot-bot .title .scroll {
  height: 100%;
  width: auto;
  overflow: hidden;
  padding: 16rpx 0 16rpx 24rpx;
}

.hot-bot .title .scroll .scroll-item {
  width: auto;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  display: inline-block;
  background-color: #ebebeb;
  border-radius: 8rpx;
  margin-right: 24rpx;
  color: #acacac;
}

.hot-bot .title .scroll .show-item {
  color: #0084ff;
  background-color: rgba(0, 132, 255, 0.1);
}

.hot-bot .title .more {
  height: 96rpx;
  width: 96rpx;
  position: absolute;
  right: 0;
  top: 0;
  background-color: #ffffff;
}

.hot-bot .title .more image {
  height: 64rpx;
  width: 64rpx;
  margin-top: 16rpx;
  transition: all 0.2s ease-in-out;
  -webkit-transition: all 0.2s ease-in-out;
  -moz-transition: all 0.2s ease-in-out;
  -o-transition: all 0.2s ease-in-out;
}

.hot-bot .title .rotate image {
  transform: rotate(180deg);
  -webkit-transform: rotate(180deg);
  -moz-transform: rotate(180deg);
  -o-transform: rotate(180deg);
  -ms-transform: rotate(180deg);
}

.hot-bot .main-scroll {
  width: 100%;
  height: calc(100% - 96rpx);
  position: absolute;
  overflow: hidden;
  overflow-y: hidden;
}

.hot-bot .main-scroll .top-bot {
  min-height: 200rpx;
  display: flex;
  background-color: #ffffff;
  padding: 16rpx 4%;
  box-shadow: 0px 0px 1rpx 0px rgba(202, 199, 199, 0.993);
}

.hot-bot .main-scroll .top-bot .top-tip {
  width: 32rpx;
  height: 48rpx;
  margin-right: 8%;
  text-align: center;
  color: #9e9d9d;
  border-radius: 8rpx;
}

.hot-bot .main-scroll .top-bot .tip-1 {
  background-color: #f56c6a;
  color: #FFFFFF;
}

.hot-bot .main-scroll .top-bot .tip-2 {
  background-color: #fe8000;
  color: #FFFFFF;
}

.hot-bot .main-scroll .top-bot .tip-3 {
  background-color: #ffba17;
  color: #FFFFFF;
}

.hot-bot .main-scroll .top-bot .top-content {
  width: 60%;
}

.hot-bot .main-scroll .top-bot .top-content .content-search {
  font-weight: bold;
  font-size: 28rpx;
  color: #1A1A1A;
}

.hot-bot .main-scroll .top-bot .top-content .content-hot {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.54);
}

.hot-bot .main-scroll .top-bot .image {
  width: 30%;
}

.hot-bot .notice {
  display: flex;
  justify-content: center;
  align-items: center;
}

.hot-bot .notice .notice-contain {
  box-shadow: 0px 0px 1rpx 0px rgba(202, 199, 199, 0.993);
  flex-direction: row;
  background: #FFFFFF;
  width: 100%;
  height: 82rpx;
  justify-content: center;
  align-items: center;
}

.hot-bot .notice .notice-contain .tab-right {
  height: 100%;
}

.hot-bot .notice .notice-contain .tab-right .right-item .content-item {
  display: flex;
  font-size: 28rpx;
  height: 100%;
  line-height: 82rpx;
  padding: 0 24rpx;
}

.hot-bot .notice .notice-contain .tab-right .right-item .content-item .top-title {
  height: 40rpx;
  margin: 21rpx 21rpx 21rpx 0;
  font-size: 24rpx;
  line-height: 40rpx;
  padding: 0 16rpx;
  color: #ffffff;
  border-radius: 12rpx;
  background-color: #ee4646;
}
