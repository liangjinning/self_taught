page {
  width: 100%;
  height: 100%;
}

.member {
  background-color: #f0f0f0;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.member .upload {
  padding: 8rpx 5%;
  background-color: #ffffff;
  justify-content: space-between;
  display: flex;
}

.member .upload image {
  height: 80rpx;
  width: 80rpx;
}

.member .upload .header {
  width: calc(100% - 160rpx);
}

.member .upload .header .tip {
  font-size: 24rpx;
  color: #999999;
}

.member .upload .header .username {
  display: flex;
}

.member .upload .header .username .mber {
  height: 32rpx;
  font-size: 20rpx;
  border-radius: 8rpx;
  margin: 4rpx 8rpx;
  padding: 0 8rpx;
  background-image: linear-gradient(to right, #eeeeee, #aaaaaa);
}

.member .upload .search {
  height: 56rpx;
  width: 56rpx;
  margin-top: 12rpx;
}
