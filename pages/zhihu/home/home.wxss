@charset "UTF-8";
page {
  width: 100%;
  height: 100%;
}

.home-view {
  background-color: #f0f0f0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.home-view .header {
  background-color: #ffffff;
  padding: 0 3%;
  flex: 0 0 100rpx;
  /* 不放大不缩小固定100rpx */
}

.home-view .header .home-souse {
  display: flex;
}

.home-view .header .home-souse .add {
  height: 24px;
  width: 24px;
  margin: 4px 6px;
}

.home-view .header .home-souse .live {
  margin-right: 12px;
  margin-top: 2px;
}

.home-view .header .home-souse .souse-input {
  height: 32px;
  background-color: #ebebeb;
  padding: 0 8px;
  border-radius: 8px;
  width: calc( 94% - 64px);
}

.home-view .header .title-list {
  display: flex;
  margin-top: 12px;
}

.home-view .header .title-list .title-item {
  width: 33%;
  text-align: center;
}

.home-view .header .title-list .show-item .tip {
  height: 2px;
  width: 32px;
  background-color: black;
  margin-top: 6px;
  margin-left: 36%;
}

.home-view .main {
  flex: 1;
  position: relative;
}

.home-view .main .main-scroll {
  width: 100%;
  position: absolute;
}

.home-view .main .main-scroll .main-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.home-view .main .main-scroll .scroll-item {
  background-color: #ffffff;
  margin-top: 12rpx;
  width: 100%;
  padding: 18rpx 24rpx;
}

.home-view .main .main-scroll .scroll-item .item-title {
  font-weight: 900;
  height: 48rpx;
  line-height: 48rpx;
  color: #202020;
}

.home-view .main .main-scroll .scroll-item .item-content .content-text .user-info {
  display: flex;
}

.home-view .main .main-scroll .scroll-item .item-content .content-text .user-info .user-img {
  height: 32rpx;
  width: 32rpx;
  border-radius: 50%;
  border: 1rpx solid #6b6b6b;
  margin: 4rpx 8rpx 4rpx 0;
}

.home-view .main .main-scroll .scroll-item .item-content .content-text .user-info .user-name {
  font-weight: 900;
  color: #6b6b6b;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.home-view .main .main-scroll .scroll-item .item-content .content-text .user-info .user-tip {
  color: #afafaf;
  font-size: 28rpx;
}

.home-view .main .main-scroll .scroll-item .item-content .content-text .content-info {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.home-view .main .main-scroll .scroll-item .item-bottom {
  display: flex;
  margin-top: 12rpx;
  color: #afafaf;
}

.home-view .main .main-scroll .scroll-item .item-bottom .bottom-zan {
  margin-right: 12rpx;
}

.home-view .main .main-scroll .scroll-item .item-bottom .bottom-comment {
  margin-left: 12rpx;
}
