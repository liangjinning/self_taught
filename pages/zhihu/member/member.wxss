page {
  width: 100%;
  height: 100%;
}

.member {
  background-color: #f0f0f0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.member .member-top {
  background-color: #ffffff;
  padding: 0 3%;
  box-shadow: 0px 0px 2rpx 0px rgba(202, 199, 199, 0.993);
  white-space: nowrap;
}

.member .member-top .upload {
  padding: 8rpx 5%;
  background-color: #ffffff;
  justify-content: space-between;
  display: flex;
}

.member .member-top .upload image {
  height: 80rpx;
  width: 80rpx;
}

.member .member-top .upload .header {
  width: calc(100% - 160rpx);
}

.member .member-top .upload .header .tip {
  font-size: 24rpx;
  color: #999999;
}

.member .member-top .upload .header .username {
  display: flex;
}

.member .member-top .upload .header .username .mber {
  height: 32rpx;
  font-size: 20rpx;
  border-radius: 8rpx;
  margin: 4rpx 8rpx;
  padding: 0 8rpx;
  background-image: linear-gradient(to right, #eeeeee, #aaaaaa);
}

.member .member-top .upload .search {
  height: 56rpx;
  width: 56rpx;
  margin-top: 12rpx;
}

.member .member-top .scroll {
  height: 40rpx;
  width: auto;
  overflow: hidden;
  padding: 16rpx 0 16rpx 24rpx;
}

.member .member-top .scroll .scroll-item {
  width: auto;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  padding-right: 60rpx;
  display: inline-block;
}

.member .member-list {
  flex: 1;
  position: relative;
  background-color: #f0f0f0;
}

.member .member-list .main-scroll {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
