page {
  width: 100%;
  height: 100%;
}

.main-scroll {
  width: 100%;
  position: absolute;
}

.main-scroll .main-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.main-scroll .scroll-item {
  background-color: #ffffff;
  margin-top: 12rpx;
  width: 100%;
  padding: 18rpx 24rpx;
}

.main-scroll .scroll-item .item-title {
  font-weight: 900;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 30rpx;
  color: #202020;
}

.main-scroll .scroll-item .item-content .content-text .user-info {
  display: flex;
}

.main-scroll .scroll-item .item-content .content-text .user-info .user-img {
  height: 32rpx;
  width: 32rpx;
  border-radius: 50%;
  border: 1rpx solid #6b6b6b;
  margin: 4rpx 8rpx 4rpx 0;
}

.main-scroll .scroll-item .item-content .content-text .user-info .user-name {
  font-weight: 900;
  color: #6b6b6b;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.main-scroll .scroll-item .item-content .content-text .user-info .user-tip {
  color: #afafaf;
  font-size: 28rpx;
}

.main-scroll .scroll-item .item-content .content-text .content-info {
  display: -webkit-box;
  font-size: 28rpx;
  color: #1a1a1a;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.main-scroll .scroll-item .item-bottom {
  display: flex;
  margin-top: 12rpx;
  color: #afafaf;
  font-size: 28rpx;
}

.main-scroll .scroll-item .item-bottom .bottom-zan {
  margin-right: 12rpx;
}

.main-scroll .scroll-item .item-bottom .bottom-comment {
  margin-left: 12rpx;
}
